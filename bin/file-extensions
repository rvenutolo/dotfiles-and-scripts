#!/usr/bin/env bash

set -euo pipefail

if [[ "$#" -gt 1 ]]; then
  echo "${0##*/}: Expected at most 1 argument" >&2
  exit 2
fi

if [[ "$#" -eq 0 ]]; then
  readonly dir="."
else
  readonly dir="$1"
fi

find "${dir}" -type f -printf "%f\n" | grep -F '.' | awk -F '.' '{print "." $NF}' | sort | uniq -c | sort -nr
