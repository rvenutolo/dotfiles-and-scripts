#!/usr/bin/env bash

set -eux -o pipefail

# store all solarized files in one place
mkdir $HOME/.solarized
cd $HOME/.solarized

# dircolors
git clone https://github.com/seebi/dircolors-solarized.git
eval `dircolors $HOME/.solarized/dircolors-solarized/dircolors.256dark`
mkdir $HOME/.dir_colors
ln -s $HOME/.solarized/dircolors-solarized/dircolors.256dark $HOME/.dir_colors/dircolors

# gnome terminal
git clone https://github.com/sigurdga/gnome-terminal-colors-solarized.git
./gnome-terminal-colors-solarized/install.sh

# mate terminal
git clone https://github.com/cledoux/mate-terminal-colors-solarized
./mate-terminal-colors-solarized/install.sh

# vim
echo "
set term=screen-256color-bce
let g:solarized_termcolors=256
set t_Co=256
set background=dark
colorscheme default " >> $HOME/.vimrc.after
