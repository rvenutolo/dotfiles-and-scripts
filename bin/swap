#!/usr/bin/env bash

set -euo pipefail

if [[ "$#" -ne 2 ]]; then
  echo "${0##*/}: Expected exactly 2 arguments" >&2
  exit 2
fi

if [[ -f "$1" && -f "$2" ]] || [[ -d "$1" && -d "$2" ]]; then
  readonly temp_file="swap.tmp"
  mv "$1" "${temp_file}"
  mv "$2" "$1"
  mv "${temp_file}" "$2"
  echo "${0##*/}: $1 <-> $2" >&2
else
  if [[ -e "$1" && -e "$2" ]]; then
    echo "${0##*/}: Cannot swap file and directory" >&2
  fi
  if [[ ! -e "$1" ]]; then
    echo "${0##*/}: $1 does not exist" >&2
  fi
  if [[ ! -e "$2" ]]; then
    echo "${0##*/}: $2 does not exist" >&2
  fi
  exit 2
fi
