#!/usr/bin/env bash

set -euo pipefail

if [[ "$#" -gt 1 ]]; then
  echo "${0##*/}: Expected at most 1 argument" >&2
  exit 2
fi

if [[ "$#" -eq 0 && -t 0 ]]; then
  echo "${0##*/}: Expected STDIN" >&2
  exit 2
fi

if [[ "$#" -eq 0 ]]; then
  highlight ${HIGHLIGHT_OPTIONS} | less -r
else
  case "$1" in
    *.md) glow "$1" | less -r ;;
    *) highlight ${HIGHLIGHT_OPTIONS} "$1" | less -r ;;
  esac
fi
