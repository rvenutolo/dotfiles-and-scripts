#!/usr/bin/env bash

if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
    export TERM='gnome-256color'
elif infocmp xterm-256color >/dev/null 2>&1; then
    export TERM='xterm-256color'
fi;

if tput setaf 1 &> /dev/null; then
    tput sgr0 > /dev/null; # reset colors -- redirect due to unwanted output
    bold=$(tput bold)
    reset=$(tput sgr0)
    # Solarized colors, taken from http://git.io/solarized-colors.
    black=$(tput setaf 0)
    blue=$(tput setaf 33)
    cyan=$(tput setaf 37)
    green=$(tput setaf 64)
    orange=$(tput setaf 166)
    purple=$(tput setaf 125)
    red=$(tput setaf 124)
    violet=$(tput setaf 61)
    white=$(tput setaf 15)
    yellow=$(tput setaf 136)
else
    bold='';
    reset="\e[0m"
    black="\e[1;30m"
    blue="\e[1;34m"
    cyan="\e[1;36m"
    green="\e[1;32m"
    orange="\e[1;33m"
    purple="\e[1;35m"
    red="\e[1;31m"
    violet="\e[1;35m"
    white="\e[1;37m"
    yellow="\e[1;33m"
fi;

if [[ "${USER}" == "root" ]]; then
    userStyle="${red}"
    promptChar="#"
else
    userStyle="${orange}"
    promptChar="$"
fi;

if [[ "${SSH_CONNECTION}" ]]; then
    hostStyle="${red}"
else
    hostStyle="${yellow}"
fi;

space="\[${white}\] "
timestamp="\[${cyan}\]\t"
user="\[${userStyle}\]\u"
at="\[${white}\]@"
host="\[${hostStyle}\]\h"
in="\[${white}\]in"
dir="\[${green}\]\w"
prompt="\[${white}\]\[${promptChar}\]"
reset="\[${reset}\]"

continuation="\[${yellow}\]→"

PS1="\[\033]0;\w\007\]\[${bold}\]"
PS1+="${timestamp}"
PS1+="${space}"
if [[ -n "${SSH_CONNECTION}" ]]; then
    PS1+="${user}"
    PS1+="${at}"
    PS1+="${host}"
    PS1+="${space}"
    PS1+="${in}"
    PS1+="${space}"
elif [[ "${LOGNAME}" != "${USER}" ]] || [[ "${USER}" == 'root' ]]; then
    PS1+="${user}"
    PS1+="${space}"
    PS1+="${in}"
    PS1+="${space}"
else
    PS1+="${user}"
    PS1+="${space}"
    PS1+="${in}"
    PS1+="${space}"
fi
PS1+="${dir}"
PS1+="${space}"
GIT_PS1_SHOWDIRTYSTATE="nonempty"
GIT_PS1_SHOWSTASHSTATE="nonempty"
GIT_PS1_SHOWUNTRACKEDFILES="nonempty"
GIT_PS1_SHOWUPSTREAM=""
GIT_PS1_STATESEPARATOR="|"
## Must use Hack font (http://sourcefoundry.org/hack/) for branch symbol
#PS1+="$(__git_ps1 "${space}\[${blue}\]git%s")"
PS1+='$(__git_ps1 "${blue}%s ")'
PS1+="${prompt}"
PS1+="${space}"
PS1+="${reset}"
export PS1

PS2="${continuation} ${reset}"
export PS2
